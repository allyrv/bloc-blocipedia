<% if user_is_authorized_to_update? %>
<h1>Edit Wiki</h1>

<div class="row">
	<div class="col-md-4">
		<p>Guidelines for Wikis:</p>
		<ul>
			<li>No jerks.</li>
			<li>Be nice to dogs.</li>
			<li>Smile when you type.</li>
		</ul>
		<hr>
 		<p>Markdown Cheatsheet:</p>
 		<ul>
   			<li><strong>**bold**</strong></li>
			<li>_underline_</li>
			<li><i>*italic*</i></li>
			<li>`code`</li>
			<li>--- horizontal rule</li>
			<li><mark>==highlight==</mark></li>
			<li>links[I'm an inline-style link](https://www.google.com)</li>
 		</ul>
		</div>


	<div class="col-md-8">
		
		<%= form_for @wiki do |f| %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, class: 'form-control', placeholder: "Enter topic name" %>
			</div>

			<div class="form-group">
				<%= f.label :body %>
				<%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter topic description" %>
			</div>

			<% if current_user.admin? || current_user.premium? %>
				<div class="form_group">
					<%= f.label :private, class: 'checkbox' do %>
						<%= f.check_box :private, class: 'checkbox inline' %> Private Wiki
					<% end %>
				</div>
			<% end %>
			
			<div class="form-group">
				<%= f.submit "Save", class: 'btn btn-success' %>
		<% end %>
		<div class="row">	
	</div>
</div>	
<% end %>