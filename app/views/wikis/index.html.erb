<h1>Wikis</h1>
<div class="pull-right">
	<%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
</div>

<div class="col-md-8">
    <% @wikis.each do |wiki| %>
		<div class ="media">
			<div class ="media-body">
				<h4 class="media-heading">
					<% if wiki.private? %>
						<%= link_to wiki.title, wiki, class: "private" %> <small>[private]</small><br />
                        <small>By: <%= wiki.user.email %></small>
					<% else %>
						<%= link_to wiki.title, wiki %> <br />
                        <small>By: <%= wiki.user.email %></small>
					<% end %>
				</h4>
			</div>
		</div>
	<% end %>
    
  </div>
</div>