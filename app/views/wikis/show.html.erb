<h1><%= @wiki.title %></h1>

<div class="row">
  <div class="col-md-8">
	<p class="lead"><%= @wiki.body %></p>
  </div>
</div>

<%= link_to "Back to Wikis", wikis_path, class: 'btn' %></br>

<% if current_user %>
    <%= link_to "Edit this wiki", edit_wiki_path, class: 'btn btn-success' %>
<% end %>

<% if current_user == @wiki.user %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %>
<% end %>